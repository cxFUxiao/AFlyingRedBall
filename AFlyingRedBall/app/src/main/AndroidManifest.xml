<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/notFullScreen">

        <activity android:name=".SettingsActivity" />
        <activity
            android:name=".prepare"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullScreen" />
        <activity android:name=".DeleteSuccess" />
        <activity android:name=".DataBaseActivity" />
        <activity
            android:name=".OrderDBHelper"
            tools:ignore="Instantiatable" />
        <activity android:name=".AssistActivity" />
        <activity android:name=".HelpActivity" />
        <activity android:name=".StartPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainGameActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullScreen" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>